{% extends "layout.html.twig" %}
{% block body %}

    <div class="jumbotron text-center">
      <h1>Add a client</h1>
    </div>
    
<div class="container">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
  <div class="form-group">
    <h5>{{ form_label(form.prenom, "Firstname", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}</h5>
    <div class="col-sm-10">
      {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
  <div class="form-group">
    <h5>{{ form_label(form.nom, "Lastname", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}</h5>
    <div class="col-sm-10">
      {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
    <div class="col-sm-10">
      {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
      {{ form_widget(form.back, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}