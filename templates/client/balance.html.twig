{% extends "layout.html.twig" %}
{% block body %}

    <div class="jumbotron text-center">
      <h1>Change/Delete client balance</h1>
    </div>
    
<div class="container">
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
  <div class="form-group">
    <h5>{{ form_label(form.client, "Client", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}</h5>
    <div class="col-sm-10">
      {{ form_widget(form.client, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>
    <div class="container">
     <h5>Your current balance (€)</h5>
      <div class="card";>
        <div><b> {{solde}}</b></div>
      </div>
    </div>

    <div class="form-group">
        <h5>{{ form_label(form.new_balance, "Add (€)", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}</h5>
        <div class="col-sm-10">
        <b>{{ form_widget(form.new_balance, {'attr': {'class': 'form-control'}}) }}</b>
        </div>
   </div>
   
    <div class="col-sm-10">
      {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
      {{ form_widget(form.back, {'attr': {'class': 'btn btn-primary'}}) }}
      {{ form_widget(form.loadinfo, {'attr': {'class': 'btn btn-primary'}}) }}
      {{ form_widget(form.delete, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
