{% extends "layout.html.twig" %}
{% block body %}

    <div class="jumbotron text-center">
      <h1>Orders informations</h1>
      <p>
      <div class="btn-group">
      <form action="{{ path('homepage') }}">
        <button type="submit" class="btn btn-outline-primary waves-effect"><b>HOME</b></button>
      </form>
      </div>
      </p>    
    </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Order ID</th>
      <th scope="col">Client ID</th>
      <th scope="col">Price</th>
      <th scope="col">Products</th>
    </tr>
  </thead>
  <tbody>
  {% for order in listOrders %}    
    <tr>
        <td>{{order.id}}</td>
        <td>{{order.client}}</td>
        <td>{{order.price}} €</td>
        <td><ul class="list-group">       
          {% for product,quantity in order.listproducts %} 
          <li class="list-group-item d-flex justify-content-between align-items-right">{{product}} : {{quantity}}</li>
          {% endfor %}</ul>
        </td>
        </tr>
  {% endfor %}
  </tbody>
</table>
<ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div id="total"><b>Total Sold</b></div>
        <span class="badge badge-pill badge-primary">{{total}} €</span>
    </li>
</ul>
{% endblock %}

